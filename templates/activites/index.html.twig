{% extends 'base.html.twig' %}


{% block title %}Hello ActivitesController!{% endblock %}

{% block body %}



<section class="activites">
    {% for activites in activites %}
        <div class="container">
            <h4 class="card-title">{{ activites.titleActivite }}</h4>
            <div class="card" style="width:400px">
                <img class="card-img-top" src="{{ activites.imageName1 }}" alt="" style="width:100%">
                <div class="card-body">
                    <p class="card-text">{{ activites.decriptActivite | raw }}</p>
                </div>
                <a href="{{ path('activites_show', {'id': activites.id}) }}" class="btn btn-primary">Lire la suite</a>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 transform-on-hover">
                        <a class="lightbox" href="/images/{{ activites.imageName1 }}"><img src="/images/{{ activites.imageName1 }}" class="card-img-top"</a>
                        
                        <div class="card-body">
                            <p class="text-muted card-text"><p>{{ activites.decriptActivite | raw }}</p></p>
                            <a href="{{ path('activites_show', {'id': activites.id}) }}" class="btn btn-primary">Lire la suite</a> 
                        </div>
                    </div>
                </div>
            </div>    
        </div>
    {% endfor %}
</section>
<script> baguetteBox.run('.card-gallery', {animation: 'slideIn'})</script>

{% endblock %} 
