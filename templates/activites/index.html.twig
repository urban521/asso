{% extends 'base.html.twig' %}

{% block title %}Hello ActivitesController!{% endblock %}

{% block body %}

<section class="activites">

    {% for activites in activites %} 
        <activite>
            <h2>{{ activites.titleActivite }}</h2>
            <div class="content">
                <img src="{{ activites.picActivite1 }}" alt="">
