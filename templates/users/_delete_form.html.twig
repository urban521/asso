<form method="post" action="{{ path('users_delete', {'id': user.id}) }}" onsubmit="return confirm('Voulez vous vraiment effacer le licencier ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-primary">Effacer le licencier</button>
</form>
